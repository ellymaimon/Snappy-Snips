@using HairSalon.Models
@model HairSalon.Models.Stylist

@{
  Layout = "_Layout";
}

<div class="container">
    <h2>Add a new Stylist</h2>
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label asp-for="StylistFirstName"><h4>First Name</h4></label>
                @Html.TextBoxFor(model => model.StylistFirstName, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label asp-for="StylistLastName"><h4>Last Name</h4></label>
                @Html.TextBoxFor(model => model.StylistLastName, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="SpecialtyIds"><h4>Specialties (Hold shift and click to add multiple):</h4></label>
                @Html.DropDownList("SpecialtyIds", null, new { multiple = "true", @class = "form-control" })
            </div>

            <input type="submit" value="Create Stylist" class="btn btn-success">
        }
         
        <p>@Html.ActionLink("Back to Stylists", "Index")</p>
        
</div>