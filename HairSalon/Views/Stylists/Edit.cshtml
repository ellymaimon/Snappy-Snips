@model HairSalon.Models.Stylist
@{
  Layout = "_Layout";
}

<div class="container">
    <h2>Edit Stylist: @Html.DisplayFor(model => model.StylistFirstName) @Html.DisplayFor(model => model.StylistLastName)</h2>
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.HiddenFor(model => model.StylistId)
                <label asp-for="StylistFirstName"><h4>New First Name</h4></label>
                @Html.TextBoxFor(model => model.StylistFirstName, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.HiddenFor(model => model.StylistId)
                <label asp-for="StylistLastName"><h4>New Last Name</h4></label>
                @Html.TextBoxFor(model => model.StylistLastName, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="SpecialtyIds"><h4>Specialties (Hold shift and click to select multiple):</h4></label>
                @Html.DropDownList("SpecialtyIds", null, new { multiple = "true", @class = "form-control" })
            </div>


            <div class="form-group">
                <label for="ClientIds"><h4>Clients (Hold shift and click to select multiple):</h4></label>
                @Html.DropDownList("ClientIds", null, new { multiple = "true", @class = "form-control" })
            </div>


            <input type="submit" value="Submit" class="btn btn-success">
        }
    <p>@Html.ActionLink("Back to Stylists", "Index")</p>
</div>