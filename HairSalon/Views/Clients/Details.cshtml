@model HairSalon.Models.Client
@{
  Layout = "_Layout";
}

<div class="container">
    <h2>@Html.DisplayFor(model => model.ClientFirstName) @Html.DisplayFor(model => model.ClientLastName)</h2>
    <h4>Stylist:</h4>
    <ul>
        @foreach (var stylist in ViewBag.StylistList)
        {
            <li><a href="/stylists/@stylist.StylistId">@stylist.StylistFirstName @stylist.StylistLastName</a></li>
        }
    </ul>

    <hr />
    <p>@Html.ActionLink("Back to Client List", "Index")</p>
</div>